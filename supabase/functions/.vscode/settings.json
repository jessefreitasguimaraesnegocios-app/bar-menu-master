{
  // Configuração para usar Deno nas Edge Functions
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": false,
  "deno.config": "./deno.json",
  
  // Desabilitar validação TypeScript padrão (Node.js) já que usamos Deno
  "typescript.validate.enable": false,
  "typescript.preferences.includePackageJsonAutoImports": "off",
  
  // Usar o formatter do Deno para arquivos TypeScript aqui
  "[typescript]": {
    "editor.defaultFormatter": "denoland.vscode-deno"
  }
}
